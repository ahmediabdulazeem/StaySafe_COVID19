<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainprofilepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/mainPrimary">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/profilecover"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/exsitLayout"
                    android:layout_width="60dp"
                    android:layout_height="108dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logoutImg"
                        app:srcCompat="@drawable/existarrow"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="تسجيل خروج"
                        android:textColor="@color/whiteAppColor"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageViews"
                            android:layout_width="126dp"
                            android:layout_height="107dp"
                            app:srcCompat="@drawable/redheart" />

                        <ProgressBar
                            android:id="@+id/progressBarH1"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/getbetterCaseNb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/arabicnumber"
                            android:gravity="center"
                            android:textColor="@color/whiteAppColor"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="95dp"
                            android:fontFamily="@font/shahdrontregular"
                            android:text="حالات شفاء"
                            android:textColor="@color/whiteAppColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView8"
                            app:srcCompat="@drawable/redheart"
                            android:layout_width="159dp"
                            android:layout_height="112dp" />

                        <ProgressBar
                            android:id="@+id/progressBarH2"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/confermedCaseNb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/arabicnumber"
                            android:gravity="center"
                            android:textColor="@color/whiteAppColor"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView21a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="95dp"
                            android:fontFamily="@font/shahdrontregular"
                            android:text="حالات اصابه موكده"
                            android:textColor="@color/whiteAppColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/shahdrontregular"
                android:text="#خليك_في_البيت"
                android:textColor="@color/whiteAppColor"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneImg"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape2" />

            <TextView
                android:id="@+id/emergNumberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arabicnumber"
                android:text="105"
                android:textColor="@color/boldTextAppColor"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allyouneed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:text="للطوارئ كلم "
                android:textColor="@color/boldTextAppColor"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/whiteAppColor"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopeClosing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:textColor="@color/boldTextAppColor" />

            <TextView
                android:id="@+id/peopleAtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:textColor="@color/boldTextAppColor" />

        </LinearLayout>

        <fragment
            android:id="@+id/fragment"
            android:name="com.app.staysafefinal.fragment.UpperTabFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainPrimary"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/familyfragtx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/shahdrontregular"
                    android:gravity="center"
                    android:text="علتك خد بالك"
                    android:textColor="@color/whiteAppColor"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <fragment
                    android:id="@+id/fragment_family"
                    android:name="com.app.staysafefinal.fragment.FamilyFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>