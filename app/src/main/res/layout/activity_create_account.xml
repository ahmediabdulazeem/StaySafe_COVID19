<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/mainPrimary"
    tools:context=".CreateAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="72dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@color/mainPrimary"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/createtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:text="انشاء"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/shahdrontregular"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="حساب جديد"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />


            <EditText
                android:id="@+id/emailetCA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:hint="البريد الخاص بك"
                android:inputType="textEmailAddress"
                android:textColor="@color/boldTextAppColor"
                android:textColorHint="#B5AEAE"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <EditText
                android:id="@+id/reemailetCA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:hint="البريد الخاص بك"
                android:inputType="textEmailAddress"
                android:textColor="@color/boldTextAppColor"
                android:textColorHint="#B5AEAE"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <EditText
                android:id="@+id/passwordCA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:hint="كلمة المرور"
                android:password="true"
                android:textColor="@color/boldTextAppColor"
                android:textColorHint="#B5AEAE"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <EditText
                android:id="@+id/repasswordCA"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/shahdrontregular"
                android:gravity="center"
                android:hint="اعد كتابة كلمة المرور"
                android:password="true"
                android:textColor="@color/boldTextAppColor"
                android:textColorHint="#B5AEAE"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/canceltv"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|end"
                    android:fontFamily="@font/shahdrontregular"
                    android:gravity="center"
                    android:text="الغاء"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/savebt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape"
                    android:fontFamily="@font/shahdrontregular"
                    android:text="التالي"
                    android:textColor="@color/mainPrimary"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarv"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>