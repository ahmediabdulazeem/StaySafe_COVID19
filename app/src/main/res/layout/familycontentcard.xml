<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            app:cardBackgroundColor="#00FFFFFF">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/familycardnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:text="1"
                    android:textColor="@color/boldTextAppColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/familycardtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:fontFamily="@font/shahdrontregular"
                    android:gravity="center|clip_vertical|center_vertical"
                    android:text="يااااااااااااااااااااااارب"
                    android:textColor="@color/boldTextAppColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/familycardcontent"
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/shahdrontregular"
                    android:gravity="center"
                    android:text="يا مسهل الحال يا رب "
                    android:textColor="@color/boldTextAppColor"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>